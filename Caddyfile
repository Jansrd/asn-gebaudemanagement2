{
    # Global options
    email {$ACME_EMAIL}

    # Use Cloudflare DNS for ACME DNS-01 challenge
    acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}

    # Global internal logging (ACME, renewals, errors, etc.)
    log {
        output file /data/caddy-internal.log {
            roll_size 10MB
            roll_keep 10
        }
        format json
        level INFO
    }
}

# Main site configuration
asn-ulm.de, www.asn-ulm.de {
    # Root directory for static files
    root * /srv

    # Enable gzip compression
    encode gzip

    # Security headers (matching your nginx config)
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Referrer policy
        Referrer-Policy "no-referrer-when-downgrade"
        # Content Security Policy (adjust as needed)
        Content-Security-Policy "default-src * data: 'unsafe-eval' 'unsafe-inline'"

        # Optional: Enable HSTS after verifying HTTPS works
        # Uncomment the line below once you've confirmed everything works
        # Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }

    # Handle React Router - try files first, fallback to index.html for SPA routing
    try_files {path} /index.html

    # Serve static files
    file_server

    # Access logging (optional - comment out if not needed)
    log {
        output file /data/access.log {
            roll_size 10MB
            roll_keep 5
        }
        format json
    }
}
